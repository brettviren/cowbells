# /vis/viewer/select viewer-0

/vis/open OGLSX

/vis/drawVolume WCBarrelCell
/vis/viewer/set/style surface 
/vis/viewer/set/culling global true
/vis/viewer/set/upVector 0 0 1
/vis/viewer/set/viewpointThetaPhi 45 45 deg

/vis/geometry/set/visibility WCPMT -1 1
/vis/geometry/set/forceSolid WCPMT -1 1
#/vis/geometry/set/forceWireframe WCPMT -1 1
/vis/geometry/set/colour WCPMT -1 1 0 0 0.05

/vis/geometry/set/visibility WLSFaceWCPMT -1 1
/vis/geometry/set/forceSolid WLSFaceWCPMT -1 1
/vis/geometry/set/colour WLSFaceWCPMT -1 0 1 0 0.05

/vis/geometry/set/visibility glassFaceWCPMT -1 1
/vis/geometry/set/forceSolid glassFaceWCPMT -1 1

/vis/viewer/zoom 1.5
/vis/viewer/flush

