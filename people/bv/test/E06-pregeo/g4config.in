#
# Geant4 configuration macro for Example06
# (called from Root macro g4Config.C)

# Verbose levels
#
/mcVerbose/all 1
/mcVerbose/trackingAction 0
/mcVerbose/geometryManager 1
/mcVerbose/extraPhysicsList 2

# Optical processes verbose
# 
#/optics_engine/selectOpProcess Scintillation
#/optics_engine/setOpProcessVerbose 2
#/optics_engine/selectOpProcess Cerenkov
#/optics_engine/setOpProcessVerbose 2
#/optics_engine/selectOpProcess Absorption
#/optics_engine/setOpProcessVerbose 2
#/optics_engine/selectOpProcess Rayleigh
#/optics_engine/setOpProcessVerbose 2
#/optics_engine/selectOpProcess Boundary
#/optics_engine/setOpProcessVerbose 2
#/optics_engine/selectOpProcess OptWLS
#/optics_engine/setOpProcessVerbose 2
#/optics_engine/selectOpProcess OptMieHG
#/optics_engine/setOpProcessVerbose 2

# Inactivate scintillation, [WLS, MieHG]
#
/optics_engine/selectOpProcess Scintillation
/optics_engine/setOpProcessUse false
#/optics_engine/selectOpProcess OpWLS
#/optics_engine/setOpProcessUse false
#/optics_engine/selectOpProcess OpMieHG
#/optics_engine/setOpProcessUse false

# Set parameters for Cerenkov
#
/optics_engine/setCerenkovMaxPhotons 20
/optics_engine/setCerenkovMaxBetaChange 0.1
/optics_engine/setTrackSecondariesFirst false

# Set optical surface model 
#
/optics_engine/setOpticalSurfaceModel unified

#/tracking/verbose 1
